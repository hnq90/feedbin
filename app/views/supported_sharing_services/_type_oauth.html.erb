<% if status == :active %>
  <%= render partial: "supported_sharing_services/delete_supported_service", locals: {sharing_service: sharing_service} %>
<% elsif status == :issue %>
  <p class="service-title"><span class="service-error"><%= sharing_service.label %></span></p>
  <small>Feedbin can no longer access <%= sharing_service.label %>, <%= link_to 'reactivate', supported_sharing_service_path(sharing_service, supported_sharing_service: {operation: 'authorize'}), method: :patch %>?</small>
  <%= link_to 'Deactivate', supported_sharing_service_path(sharing_service), class: 'list-action danger', method: :delete %>
<% else %>
  <p class="service-title"><%= sharing_service[:label] %></p>
  <%= link_to 'Activate', supported_sharing_services_path(supported_sharing_service: {service_id: sharing_service[:service_id], operation: 'authorize'}), class: 'list-action', method: :post %></small>
<% end %>
