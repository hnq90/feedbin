<% if status == :active %>
  <% from_email = (sharing_service.email_address.present?) ? sharing_service.email_address : @user.email %>
  <%= render partial: "supported_sharing_services/delete_supported_service", locals: {sharing_service: sharing_service} %>
  <small class="show-service-options">Emails will be sent from <%= sharing_service.email_name %> &lt;<%= from_email %>&gt;, <a href="#" data-behavior="show_service_options">edit</a>.</small>
  <%= render partial: "supported_sharing_services/email_form", locals: {sharing_service: sharing_service, record: sharing_service} %>
<% else %>
  <p class="service-title"><%= sharing_service[:label] %></p>
  <%= link_to 'Activate', '#', class: 'list-action show-service-options', data: {behavior: "show_service_options"} %>
  <%= render partial: "supported_sharing_services/email_form", locals: {sharing_service: sharing_service, record: record} %>
<% end %>
